<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="product">
 <sql id="search">
 	select * from product
 </sql>
 <select id="list" resultType="Product">
 	select * from <include refid="search"></include>
 	LIMIT #{offset},#{perPage}
 </select>
 <select id="total">
 	select count(*) from product
 </select>
 
 <insert id="add">
 	insert into product (name,price,category) values (#{name},#{price},#{category})
 </insert>
 <select id="item" resultType="Product">
 select * from product where id=#{id}
 </select>
 <update id="update">
 	update product set name=#{name},price=#{price},category=#{category}, status=#{status} where id=#{id}
 </update>
 <delete id="delete">
 	delete from product where id=#{id}
 </delete>
 </mapper>