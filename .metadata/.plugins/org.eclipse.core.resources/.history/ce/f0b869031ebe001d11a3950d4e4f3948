<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="product">
 <sql id="search">
 	select * from product
 	<where>
 		<if test="search eq 1">
 			id=#{keyword}
 		</if>
 		<if test="search eq 2">
 			name=#{keyword}
 		</if>
 		<if test="search eq 3">
 			price=#{keyword}
 		</if>
 		
 	</where>
 </sql>
 <select id="list" resultType="Product">
 	select * from ( <include refid="search"></include>) t1
 	LIMIT #{offset},#{perPage}
 	
 	
 </select>
 <select id="total" resultType="Integer">
 	select count(*) from ( <include refid="search"></include>) t1
 </select>
 
 <insert id="add">
 	insert into product (name,price,category) values (#{name},#{price},#{category})
 </insert>
 <select id="item" resultType="Product">
 select * from product where id=#{id}
 </select>
 <update id="update">
 	update product set name=#{name},price=#{price},category=#{category}, status=#{status} where id=#{id}
 </update>
 <delete id="delete">
 	delete from product where id=#{id}
 </delete>
 </mapper>